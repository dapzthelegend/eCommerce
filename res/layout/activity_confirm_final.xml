<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtConfirm"
        android:text = "Please write your shipment details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    `<EditText
    android:id="@+id/orderConfirmationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@id/txtConfirm"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your name"/>

    <EditText
        android:id="@+id/orderConfirmationNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/orderConfirmationName"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:hint="your phone number"/>

    <EditText
        android:id="@+id/orderConfirmationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/orderConfirmationNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your delivery address"/>

    <EditText
        android:id="@+id/orderConfirmationCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/orderConfirmationAddress"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="your city name"/>

    <Button
        android:id="@+id/btnConfirmFinalOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryWhite"
        />

</RelativeLayout>