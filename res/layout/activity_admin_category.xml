<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/sloganCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"
        />
    <LinearLayout
        android:id="@+id/linearCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@id/sloganCategory"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tShirts"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/tshirts"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tshirts"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/sports"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sports tshirt"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/femaleDresses"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/female_dresses"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dresses"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sweather"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/sweather"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sweathers"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCategoryLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@id/linearCategoryLayout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/glasses"
                android:layout_width="90dp"
                android:layout_height="80dp"

                android:src="@drawable/glasses" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glasses"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/watches"
                android:layout_width="90dp"
                android:layout_height="80dp"

                android:src="@drawable/watches" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="watches"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hats"
                android:layout_width="90dp"
                android:layout_height="80dp"

                android:src="@drawable/hats" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hats"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shoes"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:src="@drawable/shoess" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shoes"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCategoryLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@id/linearCategoryLayout2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/laptops"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:src="@drawable/laptops" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="laptops"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headphones"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:src="@drawable/headphoness" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sports tshirt"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="headphones" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mobilePhones"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:src="@drawable/mobiles" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phones"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pursesBags"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:src="@drawable/purses_bags" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bags"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnCheckOrders"
        android:background="@color/colorPrimaryDark"
        android:text="Check new orders"
        android:textAllCaps="false"
        android:layout_above="@+id/btnAdminLogout"
        android:textColor = "@color/colorPrimaryWhite"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/btnAdminLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin logout"
        android:layout_alignParentBottom="true"
       android:textAlignment="viewEnd"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>