<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">


        <TextView
            android:id="@+id/orderUserName"
            android:layout_width="160dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/orderPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Phone Number"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orderTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:text="Total Price"

            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/orderUserName"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orderAddressCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:text="Address, City"

            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/orderTotalPrice"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orderDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:text="Date, Time"

            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/orderAddressCity"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnViewOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this order products"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryWhite"
            android:layout_below="@id/orderDateTime"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

</RelativeLayout>